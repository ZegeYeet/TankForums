@model Tank_Forums.Models.ForumPost

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ForumPost</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span asp-for="className" class="control-label">Which Class</span>
                <select id="DropDownList1" asp-for="className" class="form-control">
                    <option value="">Please Select</option>
                    <option value="Death Knight">Death Knight</option>
                    <option value="Demon Hunter">Demon Hunter</option>
                    <option value="Druid">Druid</option>
                    <option value="Monk">Monk</option>
                    <option value="Paladin">Paladin</option>
                    <option value="Warrior">Warrior</option>
                </select>
                <span asp-validation-for="className" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span asp-for="postTitle" class="control-label">Title</span>
                <input asp-for="postTitle" class="form-control" />
                <span asp-validation-for="postTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span asp-for="postBody" class="control-label">Text</span>
                <textarea asp-for="postBody" class="form-control"></textarea>
                <span asp-validation-for="postBody" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Post" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
